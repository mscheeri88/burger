<h1>Hungry Burgers!</h1>

<div id='devoured'>
  <h2>Devoured Burgers!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
        </form>


        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>



  <form class="create-update-form" action="/" method="POST">
   
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>
   
    <button id='submitBurger' type="submit">Add Your Burger</button>
  </form>




<div id='notDevoured'>  
  
  <h2>Burgers Not Devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button id='devourMe' type="submit">Eat Me!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
